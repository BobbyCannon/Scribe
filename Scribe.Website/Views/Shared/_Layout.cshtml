<!DOCTYPE html>
<html lang="en" ng-app="Scribe">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="description" content="Document all the things!" />
		<title>@(ViewBag.Title ?? "Scribe")</title>
		<link href="~/favicon.ico?v=0.3" rel="shortcut icon" type="image/x-icon" />
		@Styles.Render("~/content/css")
	</head>
	<body ng-cloak>
		<div id="header">
			<div class="container">
				<ul id="headerLogin">
					@if (!Request.IsAuthenticated)
					{
						<li>
							Not logged in -
							@Html.ActionLink("Log In", "LogIn", "Account")
						</li>
					}
					else
					{
						<li>
							@Html.ActionLink(Request.RequestContext.HttpContext.User.Identity.GetDisplayName(), "Profile", "Account", null, new { id = "profileLink" }) -
						</li>
						<li>
							@using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { name = "logOutForm" }))
							{
								@Html.AntiForgeryToken()
								<a id="logOutLink" href="#" onclick="document.logOutForm.submit(); return false;">Log Out</a>
							}
						</li>
					}
				</ul>
				@using (Html.BeginForm("Search", "Page", FormMethod.Get))
				{
					<div id="headerSearch">
						<input name="term" type="text" placeholder="Enter text to search" />
					</div>
				}
				<ul id="headerMenu">
					<li>@Html.ActionLink("Home", "Home", "Page")</li>
					<li>@Html.ActionLink("Tags", "Tags", "Page")</li>
					<li>@Html.ActionLink("Pages", "Pages", "Page")</li>
					@if (Request.IsAuthenticated)
					{
						<li>@Html.ActionLink("Files", "Files", "File")</li>
						<li>@Html.ActionLink("New Page", "New", "Page")</li>

						if (ViewBag.IsAdministrator)
						{
							<li>@Html.ActionLink("Settings", "Settings", "Page")</li>
						}
					}
					<li>@Html.ActionLink("About", "About", "Page")</li>
				</ul>
			</div>
		</div>
		<div id="content">
			<div class="container">
				@RenderBody()
			</div>
		</div>
		@Scripts.Render("~/scripts/js")
		<script src="~/signalr/hubs"></script>
		<script type="text/javascript">
			toastr.options = {
				"positionClass": "toast-bottom-right",
				"preventDuplicates": true
			}
		</script>
		@RenderSection("scripts", false)
	</body>
</html>
