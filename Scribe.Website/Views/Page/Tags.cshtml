@model PagedResults<TagView>

@{
	ViewBag.Title = "Tags";
}

<div class="row">
	<div class="span12">
		<h1>Tags</h1>
	</div>
	<div class="span12">
		@if (Request.IsAuthenticated)
		{
			<div class="pull-right">
				@using (Html.BeginForm("RenameTag", "Page", FormMethod.Post))
				{
					<input id="RenameTagOldName" name="oldName" class="medium" type="text" placeholder="old name" required autofocus />
					<input id="RenameTagNewName" name="newName" class="medium" type="text" placeholder="new name" required />
					<input id="RenameTagSubmitButton" type="submit" value="Rename" />
				}
			</div>
		}
	</div>
</div>
<ul class="tag">
	@foreach (var item in Model.Results)
	{
		<li>
			@Html.ActionLink(item.Tag, "PagesWithTag", new { tag = item.Tag }, new { @class = item.Class })
		</li>
	}
</ul>